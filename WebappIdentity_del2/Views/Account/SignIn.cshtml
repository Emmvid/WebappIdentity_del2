@model UserSignInViewModel
@{
    ViewData["Title"] = "Sign in";
}

<div class="d-flex justify-content-center">
    <h1 class="display-4"> Sign in now!</h1>
    <form method="post" class="form-group" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email" class="form-label"> Email</label>
            <input asp-for="Email" class="form-control" autocomplete="off" />
            <small class="text-danger"><span asp-validation-for="Email"></span></small>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" />
            <small class="text-danger"><span asp-validation-for="Password"></span></small>
        </div>
        <div>
            <div >
                <button type="submit" class="btn-theme"> Sign in now</button>
            </div>
        </div>
    </form>
</div>
