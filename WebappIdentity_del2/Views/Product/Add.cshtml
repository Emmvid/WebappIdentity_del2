@model ProductRegistationViewModel
@{
    ViewData["Title"] = "Product Registration";
}
<div class="d-flex justify-content-center mt-5">
    <form enctype="multipart/form-data" method="post" asp-action="Add" class="col-10 col-lg-6" novalidate>
        <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="ArticleNumber" class="form-label"> Article Number </label>
            <input asp-for="ArticleNumber" class="form-control" />
            <span asp-validation-for="ArticleNumber" class="small text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ProductName" class="form-label"> Name </label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="small text-danger"></span>
        </div>
        <div class="mb-3">
            <label type="file" asp-for="Image" class="form-label"> Image </label>
            <input asp-for="Image" class="form-control" />
            <span asp-validation-for="Image" class="small text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="form-label"> Price </label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="small text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Tagline" class="form-label"> Tagline </label>
            <input asp-for="Tagline" class="form-control" />
            <span asp-validation-for="Tagline" class="small text-danger"></span>
        </div>
    
        <div class="mb-3">
            <label asp-for="Description" class="form-label"> Description </label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="small text-danger"></span>
        </div>
       <div class="mb-3">
            <label asp-for="Categories" class="form-label"> Categories </label>
            <input asp-for="Categories" class="form-control" />
            <span asp-validation-for="Categories" class="small text-danger"></span>
        </div>
        <div class="mt-5">
            <div class="d-grid">
                <button type="submit" class="btn btn-success"> Add </button>
            </div>
        </div>
    </form>
</div>
